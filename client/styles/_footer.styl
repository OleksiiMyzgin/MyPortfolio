.footer
  background-color: yellow
  color: darkblue
  position: relative
  &__home
    position: absolute
    top: -25px
    color: white
    background-color: #616161
    font-size: 40px
    width: 47px
    height: 50px
    line-height: 30px
    left: 0
    right: 0
    margin: 0 auto
    cursor: pointer
    z-index: 100
    box-shadow: 1px 1px 2px 6px rgba(97,97,97,0.3)
    svg
      vertical-align: -40%
      .homeErrow
        fill: #fdcd3b
  &__link
    display: inline-block
    height: 60px
    width: 60px
    color: darkblue
    background-color: rgba(0,0,0,.1)
    border-radius: 10px
    transition: all .3s
    margin: 0 10px
    line-height: 2.5
    cursor: pointer
    &:hover
      transform: scale(1.2)
    svg
      display: inline-block
      vertical-align: -45%