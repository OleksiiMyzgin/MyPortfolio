.skills-bars:not(.animated) .bar.fill
  width: 0!important

#about
  color:lightgrey

.services__blocks
  flex: 1
  @media (min-width: 900px)
    flex-direction: row;

.services__item
  padding: 0 10px
  margin-bottom: 30px
  flex: 1
  min-height: 290px
  justify-content: center
  .icon
    height: auto
    width: 70px

.skills-wrapper
  align-items: flex-start
  width: 100%
  @media (max-width: 940px)
    flex-direction: column
    justify-content: center
    align-items: center

.skills
  padding: 0 50px 0 50px
  &__title
    margin: 20px 0 15px 0
    font-size: 24px
  &__text
    line-height: 24px
  .hightight
    color: lightblue
    cursor: pointer
  .me
    display: inline-block
    height: 250px
    border-radius: 50%
    overflow hidden
    @media(max-width: 600px)
      height: 200px

.skills, .skills-bars
  flex: 1
  display: block
  width: calc(100% - 15px)
  max-width: 90%

.skills-bars
  color: darkblue
  @media(max-width: 940px)
    margin: 50px auto 0 auto
  &_bar
    max-width: 90%
    background: #eee
    position: relative
    align-items: flex-end
    @media(max-width: 940px)
      min-width: 100%
    span
      z-index: 1
      padding: 0 15px 0 0

.bar
  height: 28px
  margin: 0 0 15px 0
  transition: 1.1s 0.2s width ease-in-out
  &__tag
    position: absolute
    top: 0
    left: 0
    background: yellow
    width: 110px
    height 100%

.bar.fill
  position: absolute
  top: 0
  left: 0
  opacity: 1
  background: darketnYellow
  width: 0%


section:nth-of-type(2) .bar:nth-child(1) .fill
  transition: 1.1s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(2) .fill
  transition: 1.2s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(3) .fill
  transition: 1.3s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(4) .fill
  transition: 1.4s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(5) .fill
  transition: 1.5s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(6) .fill
  transition: 1.6s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(7) .fill
  transition: 1.7s 0.2s width ease-in-out

section:nth-of-type(2) .bar:nth-child(8) .fill
  transition: 1.8s 0.2s width ease-in-out









