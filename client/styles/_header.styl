.fixed-menu-style
  position: fixed
  top: -100%

.fixed-menu
  position: fixed
  top: 0
  height: auto
  background: darkgrey

@media (max-width: 575px)
  .header
    position: fixed
    top: 0
    border-bottom: 0
    &__menu
      // display: none
      padding: 0
      width: 100%
      // flex-direction: column-reverse
    .header__icon
      display: block
    .menu__list
      display: none
      margin: 0
      width: 100%
      padding-top: 70px
      .menu__item
        display: block
        &:hover:before
          width: 0%
        &:hover:after
          width: 0%
        &:hover .menu__link
          color:  $yellow
        &:hover .menu__link:before
          height: 0%
        &:hover .menu__link:after
          height: 0%
    .menu__list__lang
      margin: 20px 0
      padding: 0
      position: absolute
      padding: 0
      margin: 0
      top: 30px
      .menu__link
        background: rgba(225,225,225,.5)
        margin: 0 10px