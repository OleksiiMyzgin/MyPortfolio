#portfolio
  color: #000
  background #eee
.gallery
  @media (min-width: 900px)
    flex-direction: row

.card__text, .card__btn
    position: absolute
    display: inline-block
    width: 100%
    z-index: 2
    opacity: 0
    text-align: center
    margin: 0
    color: #000000
    font-weight: 700
    transition: all 0.3s ease-in-out
.card
  display: inline-block
  position: relative
  margin: 0 10px
  margin-bottom: 40px
  &:hover .card__text
    opacity: 1
    top: 25%
    @media (min-width: 900px)
      top: 10%
  &:hover .card__btn
    opacity: 1
    bottom: 25%
  &:hover .img
    opacity: 0.1
  &__text
    top: 0
    left: 0
    font-size: 22px
    line-height: 18px
    .highlight
      display: block
      line-height: 18px
      font-size: 16px
      color: coral
      @media (min-width: 900px)
        margin-top: 10px
  &__btn
    bottom: 0
    font-size: 18px
    padding: 10px
    border: 2px solid coral
    width: 170px
    left: 50%
    transform: translate(-50%,50%)
  .img
    border-radius: 6px;
    width: 100%;
    height: auto;
    overflow: hidden;
    transition: all .5s;
